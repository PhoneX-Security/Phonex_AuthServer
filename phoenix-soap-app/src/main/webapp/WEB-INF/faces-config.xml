<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
    
    <!-- Spring backing bean delegation -->
    <application>
        <!--
            Beans are loaded directly from spring context.
            http://cagataycivici.wordpress.com/2007/09/10/using-spring-to-manage-jsf-beans/
            
            Scope can be defined inside applicationContext as well
        -->
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
        
        <!-- 
            Delegating is used when managed bean is defined here, but some variables can 
            be extracted from spring context to init managed bean (delegated). Only
            variables are resolved. Bean is defined localy.
            
            Example:
            <managed-bean>
              <managed-bean-name>userList</managed-bean-name>
              <managed-bean-class>com.whatever.jsf.UserList</managed-bean-class>
              <managed-bean-scope>request</managed-bean-scope>
              <managed-property>
                <property-name>userManager</property-name>
                <value>#{userManager}</value>
              </managed-property>
            </managed-bean>
        -->
        
        <!--<variable-resolver>org.springframework.web.jsf.DelegatingVariableResolver</variable-resolver>-->
        
        <message-bundle>properties/messages</message-bundle>
        <message-bundle>properties.translations</message-bundle>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>sk</supported-locale>            
        </locale-config> 
        
        <!-- translation messages bundle, assign variable to be visible inside JSF via EL -->
        <resource-bundle>
	        <base-name>properties.translations</base-name>
	        <var>tran</var>
	</resource-bundle>
    </application>
  
  <lifecycle>
    <phase-listener>cz.muni.fi.pa165.cards.helpers.LifeCycleListener</phase-listener>
</lifecycle>

  <system-event-listener>
    <system-event-listener-class>cz.muni.fi.pa165.cards.helpers.ViewScopeCallbackRegistrar</system-event-listener-class>
    <system-event-class>javax.faces.event.PostConstructViewMapEvent</system-event-class>
    <source-class>javax.faces.component.UIViewRoot</source-class>
</system-event-listener>
 
<system-event-listener>
    <system-event-listener-class>cz.muni.fi.pa165.cards.helpers.ViewScopeCallbackRegistrar</system-event-listener-class>
    <system-event-class>javax.faces.event.PreDestroyViewMapEvent</system-event-class>
    <source-class>javax.faces.component.UIViewRoot</source-class>
</system-event-listener>
    <converter>
  	<converter-for-class>cz.muni.fi.pa165.cards.models.CategoryViewModel</converter-for-class>
  	<converter-class>cz.muni.fi.pa165.cards.models.CategoryViewModelConverter</converter-class>
    </converter>
    
    <converter>
  	<converter-for-class>cz.muni.fi.pa165.cards.models.CategoryModelWrapper</converter-for-class>
  	<converter-class>cz.muni.fi.pa165.cards.models.CategoryModelWrapperConverter</converter-class>
    </converter>
    
    <navigation-rule>
        <from-view-id>/welcome.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>edit</from-outcome>
            <to-view-id>/card.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        
        <navigation-case>
            <from-outcome>/welcome.xhtml</from-outcome>
            <to-view-id>/welcome.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/userManager/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>USER_REGISTERED</from-outcome>
            <to-view-id>/welcome.xhtml</to-view-id>
            <redirect /> 
        </navigation-case>
        
        <from-view-id>*</from-view-id> 
          <navigation-case> 
            <from-outcome>globalhelp</from-outcome> 
            <to-view-id>/menu/help.html</to-view-id> 
            <redirect/> 
          </navigation-case> 
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/card.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>updated</from-outcome>
            <to-view-id>/welcome.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
